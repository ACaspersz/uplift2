<div class="login-div">
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :business_name %><br>
      <%= form.text_field :business_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :thumbnail %><br>
      <%= form.file_field :thumbnail, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :region %><br>
      <%= form.text_field :region, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %><br>
      <%= form.rich_text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :donation_goal %><br>
      <%= form.number_field :donation_goal, class: "form-control" %>
    </div>
    <%= form.label :category %><br>
    <%= form.select :category, [ 'Hospitality', 'Tourism', 'Retail', 'Food Production', 'Entertainment', 'Service', 'Other' ], :prompt => 'Select One' %>
    <br>
    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-lg btn-primary" %>
    </div>

  <% end %>
</div>