<h3>Search Results</h3>  

  <% @businesses.each do |business| %>
 <%= image_tag business.picture, class: "cd-image-top" if business.picture.attached? %>
    <div class="relative w-full p-6 mb-6 border-2 border-blue-700 rounded-lg lg:w-1/4 lg:mr-8">
      <h3 class="mb-2 text-2xl font-bold"><%= business.business_name %></h3>
      <p class="text-sm italic opacity-75">Created by: <%= business.user.first_name %> </p>
      <p>Region: <%= business.region %></p>
      <p> Category <%= business.category %></p>
     
      <%= link_to "View business", business_path(business), class: "btn btn-default inline-block text-center my-2" %> 
    <% end %>