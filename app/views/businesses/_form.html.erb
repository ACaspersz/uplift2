<div class="login-div">
  <%= form_with(model: @business, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :business_name %><br>
      <%= form.text_field :business_name, class: "form-control" %>
    </div>
<%# <div class="field">
    <%= form.label :thumbnail %>
    <%# <%= form.file_field :thumbnail, accept: 'image/png, image/jpeg, image/jpg' %>
